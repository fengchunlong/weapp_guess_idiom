<view class="page">
  <view class="page__bd">
    <block wx:for="{{rankData}}" wx:key="{{index}}">
      <view class="rank-items">
        <view class="weui-cell">
          <block wx:if="{{index < 3}}">
            <view class="rank-num bg-top">{{index+1}}</view>
          </block>
          <block wx:else>
            <view class="rank-num bg-bottom">{{index+1}}</view>
          </block>
          <view class="weui-cell__hd">
            <image src="{{item.avatar}}" style="margin-right: 5px;vertical-align: middle;width:40px; height: 40px;"></image>
          </view>
          <view class="weui-cell__bd">{{item.nickname}}
            <image wx:if="{{item.gender==1}}" class="gender" src='/images/gender-male.png'></image>
            <image wx:if="{{item.gender==2}}" class="gender" src='/images/gender-female.png'></image>
          </view>
          <view class="weui-cell__ft">{{item.sesion}}å…³</view>
        </view>
      </view>
    </block>
  </view>
</view>
